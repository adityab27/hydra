<Configuration>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>

        <File name="VARLOG" fileName="/var/log/hydra/ps_dispatchers.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </File>
    </Appenders>
    <Loggers>

        <Logger name="hydra" level="INFO" additivity="false">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="kafka.utils.VerifiableProperties" level="warn" additivity="false">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="com.github.vonnagy" level="ALL" additivity="false">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.apache.kafka.common.config" level="trace">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="kafka.producer" level="warn">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="kafka.network" level="warn">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>


        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="VARLOG"/>
        </Root>

    </Loggers>
</Configuration>