<Configuration>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>

        <File name="VARLOG" fileName="/var/log/hydra/ps_dispatchers.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </File>
    </Appenders>
    <Loggers>

        <Logger name="kafka.utils.VerifiableProperties" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="kafka.producer" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="kafka.network" level="warn">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.quartz" level="error" additivity="false">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="com.mchange" level="error" additivity="false">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="com.mchange.v2.c3p0.impl" level="error" additivity="false">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="kafka.client" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="akka.io.TcpListener" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="slick" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="slick.compiler" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="scala.slick" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.apache.hadoop" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="com.pluralsight.hydra.kafka.avro" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="io.netty" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="kafka" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.apache.spark" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.I0Itec.zkclient" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.apache.zookeeper" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="com.mchange" level="debug" additivity="false">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="com.mchange.v2.log.MLog" level="debug" additivity="false">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>


        <Logger name="spray.can.server" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="io.confluent.kafka.schemaregistry.client.rest.utils" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="hydra.ingest.endpoints.IngestionEndpoint" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="scalacache.guava" level="error">
            <AppenderRef ref="VARLOG"/>
            <AppenderRef ref="STDOUT"/>
        </Logger>


        <Root level="DEBUG">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="VARLOG"/>
        </Root>
    </Loggers>
</Configuration>